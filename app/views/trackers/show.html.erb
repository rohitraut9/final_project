<div>
  <div>
    <h1 class="alert alert-secondary col-md-12" role="alert">
      Tracker #<%= @the_tracker.id %> details
    </h1>

    <div>
      <div>
        <a href="/trackers">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_tracker/<%= @the_tracker.id %>">
          Delete tracker
        </a>
      </div>
    </div>

    <dl class="row">
      <dt class="col-sm-3">
        Exercise
      </dt>
      <dd class="col-sm-9">
        <%= @the_tracker.exercise.name %>
      </dd>

      <dt class="col-sm-3">
        Sets
      </dt>
      <dd class="col-sm-9">
        <%= @the_tracker.sets %>
      </dd>

      <dt class="col-sm-3">
        Reps
      </dt>
      <dd class="col-sm-9">
        <%= @the_tracker.reps %>
      </dd>

      <dt class="col-sm-3">
        Weight
      </dt>
      <dd class="col-sm-9">
        <%= @the_tracker.weight %>
      </dd>

      <dt class="col-sm-3">
        Created on
      </dt>
      <dd class="col-sm-9">
        <%= @the_tracker.created_at.strftime("%d %b %Y") %>
      </dd>

      <dt class="col-sm-3">
        Updated on
      </dt>
      <dd class="col-sm-9">
        <%= @the_tracker.updated_at.strftime("%d %b %Y") %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2 class="alert alert-secondary col-md-12" role="alert">
      Edit Tracker
    </h2>

    <form action="/modify_tracker/<%= @the_tracker.id %>"  method="post" >
      <div>
        <label for="exercise_id_box">
          Exercise:
        </label>

        <select name="query_exercise_id">
        <% Exercise.all.each do |an_exercise| %>
          <option value="<%= an_exercise.id %>">
            <%= an_exercise.name %>
          </option>
        <% end %>
        </select>
      </div>

      <div>
        <label for="sets_box">
          Sets:
        </label>

        <input type="text" id="sets_box" name="query_sets" value="<%= @the_tracker.sets %>">
      </div>

      <div>
        <label for="reps_box">
          Reps:
        </label>

        <input type="text" id="reps_box" name="query_reps" value="<%= @the_tracker.reps %>">
      </div>

      <div>
        <label for="weight_box">
          Weight:
        </label>

        <input type="text" id="weight_box" name="query_weight" value="<%= @the_tracker.weight %>">
      </div>

      <button class="btn btn-dark">
        Update Tracker
      </button>
    </form>
  </div>
</div>

<hr>
