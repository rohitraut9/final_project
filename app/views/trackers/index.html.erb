<div>
  <div>
    <h1>
      List of all trackers
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new tracker
    </h2>

    <form action="/insert_tracker" method="post">
      <div>
        <label for="sets_box">
          Sets
        </label>

        <input type="text" id="sets_box" name="query_sets">
      </div>

      <div>
        <label for="reps_box">
          Reps
        </label>

        <input type="text" id="reps_box" name="query_reps">
      </div>

      <div>
        <label for="weight_box">
          Weight
        </label>

        <input type="text" id="weight_box" name="query_weight">
      </div>

      <div>
        <label for="user_id_box">
          User
        </label>

        <input type="text" id="user_id_box" name="query_user_id">
      </div>

      <button>
        Create tracker
      </button>
    </form>
  </div>
</div>

<hr>
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Sets
        </th>

        <th>
          Reps
        </th>

        <th>
          Weight
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_trackers.each do |a_tracker| %>
      <tr>
        <td>
          <%= a_tracker.id %>
        </td>

        <td>
          <%= a_tracker.sets %>
        </td>

        <td>
          <%= a_tracker.reps %>
        </td>

        <td>
          <%= a_tracker.weight %>
        </td>

        <td>
          <%= a_tracker.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(a_tracker.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_tracker.updated_at) %> ago
        </td>

        <td>
          <a href="/trackers/<%= a_tracker.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
