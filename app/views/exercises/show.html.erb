<div>
  <div>
    <h1 class="alert alert-secondary col-md-12" role="alert">
      Exercise #<%= @the_exercise.id %> details
    </h1>

    <div>
      <div>
        <a href="/exercises">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_exercise/<%= @the_exercise.id %>">
          Delete exercise
        </a>
      </div>
    </div>

    <dl class="row">
      <dt class="col-sm-3">
        Category
      </dt>
      <dd class="col-sm-9">
        <%= @the_exercise.category %>
      </dd>

      <dt class="col-sm-3">
        Name
      </dt>
      <dd class="col-sm-9">
        <%= @the_exercise.name %>
      </dd>

      <dt class="col-sm-3">
        Primary Muscle Type
      </dt>
      <dd class="col-sm-9">
        <%= @the_exercise.primary_type %>
      </dd>

      <dt class="col-sm-3">
        GIF
      </dt>
      <dd class="col-sm-9">
        <img src="<%= @the_exercise.image %>">
      </dd>

      <dt class="col-sm-3">
        Description
      </dt>
      <dd class="col-sm-9">
        <%= @the_exercise.description %>
      </dd>

      <dt class="col-sm-3">
        Created on
      </dt>
      <dd class="col-sm-9">
        <%= @the_exercise.created_at.strftime("%d %b %Y") %>
      </dd>

      <dt class="col-sm-3">
        Updated on
      </dt>
      <dd class="col-sm-9">
        <%= @the_exercise.updated_at.strftime("%d %b %Y") %>
      </dd>
    </dl>
  </div>
</div>

<hr>

<div>
  <div>
    <h2 class="alert alert-secondary col-md-12" role="alert">
      Edit Exercise
    </h2>

    <form action="/modify_exercise/<%= @the_exercise.id %>"  method="post" >
      <div>
        <label for="category_box">
          Category:
        </label>

        <select name="query_category" value="<%= @the_exercise.category %>">
          <% if @the_exercise.category == "Push" %>
            <option selected>Push</option>
            <option>Pull</option>
            <option>Legs</option>
          <% elsif @the_exercise.category == "Pull" %>
            <option>Push</option>
            <option selected>Pull</option>
            <option>Legs</option>
          <% else @the_exercise.category == "Legs" %>
            <option>Push</option>
            <option>Pull</option>
            <option selected>Legs</option>
          <% end %>
        </select>
      </div>

      <div>
        <label for="name_box">
          Name:
        </label>

        <input type="text" id="name_box" name="query_name" value="<%= @the_exercise.name %>">
      </div>

      <div>
        <label for="primary_type_box">
          Primary Muscle Type:
        </label>

        <input type="text" id="primary_type_box" name="query_primary_type" value="<%= @the_exercise.primary_type %>">
      </div>

      <div>
        <label for="image_box">
          GIF:
        </label>

        <input type="text" id="image_box" name="query_image" value="<%= @the_exercise.image %>">
      </div>

      <div>
        <label for="description_box">
          Description:
        </label>

        <textarea type="text" id="description_box" name="query_description" rows="3"><%= @the_exercise.description %></textarea>
      </div>

      <button class="btn btn-dark">
        Update Exercise
      </button>
    </form>
  </div>
</div>

<hr>
