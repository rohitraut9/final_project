<div>
  <div>
    <h1 class="alert alert-secondary col-md-12" role="alert">
      Strength comparison #<%= @the_strength_comparison.id %> details
    </h1>

    <div>
      <div>
        <a href="/strength_comparisons">
          Go back
        </a>
      </div>

      <div>
        <a href="/delete_strength_comparison/<%= @the_strength_comparison.id %>">
          Delete strength comparison
        </a>
      </div>
    </div>

    <dl class="row">
      <dt class="col-sm-3">
        Exercise
      </dt>
      <dd class="col-sm-9">
        <%= @the_strength_comparison.exercise.name %>
      </dd>

      <dt class="col-sm-3">
        One rep max
      </dt>
      <dd class="col-sm-9">
        <%= @the_strength_comparison.one_rep_max %>
      </dd>

      <dt class="col-sm-3">
        Created on
      </dt>
      <dd class="col-sm-9">
        <%= @the_strength_comparison.created_at.strftime("%d %B %Y") %>
      </dd>

      <dt class="col-sm-3">
        Updated on
      </dt>
      <dd class="col-sm-9">
        <%= @the_strength_comparison.updated_at.strftime("%d %B %Y") %>
      </dd>
    </dl>
  </div>
</div>

<hr>


<div>
  <div>
    <h2 class="alert alert-secondary col-md-12" role="alert">
      Edit strength comparison
    </h2>

    <form action="/modify_strength_comparison/<%= @the_strength_comparison.id %>"  method="post" >
      <div>
        <label for="exercise_id_box">
          Exercise:
        </label>

        <select name="query_exercise_id">
        <% Exercise.all.each do |an_exercise| %>
          <option value="<%= an_exercise.id %>">
            <%= an_exercise.name %>
          </option>
        <% end %>
        </select>
      </div>

      <div>
        <label for="one_rep_max_box">
          One Rep Max:
        </label>

        <input type="text" id="one_rep_max_box" name="query_one_rep_max" value="<%= @the_strength_comparison.one_rep_max %>">
      </div>

      <button class="btn btn-dark">
        Update Strength Comparison
      </button>
    </form>
  </div>
</div>

<hr>
