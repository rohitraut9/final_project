<div>
  <div>
    <h1>
      <%= @current_user.first_name %>'s progress
    </h1>
  </div>
</div>

<hr>

<!-- Starting Strength -->
<div>
  <div>
    <h2>
      Enter your starting strength
    </h2>

    <form action="/insert_strength_comparison" method="post">
      <div>
        <label for="exercise_box">
          Exercise
        </label>

        <select name="query_exercise_id">
        <% Exercise.all.each do |an_exercise| %>
          <option value="<%= an_exercise.id %>">
            <%= an_exercise.name %>
          </option>
        <% end %>
        </select>
      </div>

      <div>
        <label for="one_rep_max_box">
          One rep max
        </label>

        <input type="text" id="one_rep_max_box" name="query_one_rep_max">
      </div>

      <button>
        Create strength comparison
      </button>
    </form>
  </div>
</div>

<hr>

<!-- Starting Strength Table -->
<div>
  <div>
    <table border="1">
      <tr>
        <th>
          ID
        </th>

        <th>
          Category
        </th>

        <th>
          Exercise
        </th>

        <th>
          One rep max
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>

      </tr>

      <% excercises_in_sc = StrengthComparison.all.where({ :user_id => session.fetch(:user_id) }) %>
      <% unique_exercises = excercises_in_sc.uniq{|x| x.exercise_id}%>
      <% unique_exercises.each do |the_exercise|%>
        <% a_strength_comparison = excercises_in_sc.where({:exercise_id => the_exercise.exercise_id}).order({:created_at => :asc}).first %>
      <tr>
        <td>
          <%= a_strength_comparison.id %>
        </td>

        <td>
          <%= a_strength_comparison.exercise.category %>
        </td>

        <td>
          <%= a_strength_comparison.exercise.name %>
        </td>
        
        <td>
          <%= a_strength_comparison.one_rep_max %>
        </td>

        <td>
          <%= time_ago_in_words(a_strength_comparison.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_strength_comparison.updated_at) %> ago
        </td>

        <td>
          <a href="/strength_comparisons/<%= a_strength_comparison.id %>">
            Show details
          </a>
        </td>

      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>

<%= excercises_in_sc = StrengthComparison.all.where({ :user_id => session.fetch(:user_id) }) %>
<%= excercises_in_sc.count %>
<% counter = excercises_in_sc.count - 1 %>
<% while counter >= 0 %>
  <%= excercises_in_sc.at(counter).exercise.name %>
  <% counter = counter -1 %>
<% end %>
<%= unique_exercises = excercises_in_sc.uniq{|x| x.exercise_id}%>
<% unique_exercises.each do |the_exercise|%>
  <% earliest_entry = excercises_in_sc.where({:exercise_id => the_exercise.exercise_id}).order({:created_at => :desc}).first %>
  <div>
    <%= earliest_entry.exercise.name %>
    <%= earliest_entry.created_at %>
    <%= earliest_entry.one_rep_max %>
  </div>
<% end %>

